# QR Code API - Configuração para Localhost
# Development Environment

# =================================
# STRIPE CONFIGURATION (DESENVOLVIMENTO)
# =================================
STRIPE_SECRET_KEY=sk_test_demo_key_for_localhost_development
STRIPE_WEBHOOK_SECRET=whsec_demo_webhook_for_localhost_development

# =================================
# APPLICATION SETTINGS (LOCALHOST)
# =================================
GIN_MODE=debug
PORT=8080
BASE_URL=http://localhost:8080
DOMAIN=localhost:8080

# =================================
# DATABASE (LOCALHOST)
# =================================
DATABASE_URL=sqlite:///app/data/qrapi.db

# =================================
# REDIS (LOCALHOST)
# =================================
REDIS_URL=redis://redis:6379/0

# =================================
# DEVELOPMENT SETTINGS
# =================================
LOG_LEVEL=debug
LOG_FORMAT=text
FORCE_HTTPS=false
HEALTH_CHECK_ENABLED=true

# =================================
# CORS (LOCALHOST - PERMISSIVO)
# =================================
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# =================================
# RATE LIMITING (DESENVOLVIMENTO - MAIS PERMISSIVO)
# =================================
RATE_LIMIT_FREE=100
RATE_LIMIT_STARTER=500
RATE_LIMIT_PRO=1000
RATE_LIMIT_BUSINESS=5000