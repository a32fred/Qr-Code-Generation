# QR Code API - Exemplo de configuração
# Copie este arquivo para .env e configure suas variáveis

# =================================
# STRIPE CONFIGURATION (OBRIGATÓRIO)
# =================================
# Obtenha suas chaves em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_SEU_SECRET_KEY_AQUI
STRIPE_WEBHOOK_SECRET=whsec_SEU_WEBHOOK_SECRET_AQUI

# =================================
# APPLICATION SETTINGS
# =================================
GIN_MODE=debug
PORT=8080
BASE_URL=http://localhost:8080
DOMAIN=localhost:8080

# =================================
# DATABASE
# =================================
DATABASE_URL=sqlite:///app/data/qrapi.db

# =================================
# REDIS
# =================================
REDIS_URL=redis://redis:6379/0

# =================================
# DEVELOPMENT SETTINGS
# =================================
LOG_LEVEL=debug
LOG_FORMAT=json
FORCE_HTTPS=false
HEALTH_CHECK_ENABLED=true

# =================================
# CORS (para frontend separado)
# =================================
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# =================================
# RATE LIMITING (requests por minuto)
# =================================
RATE_LIMIT_FREE=10
RATE_LIMIT_STARTER=50  
RATE_LIMIT_PRO=100
RATE_LIMIT_BUSINESS=500